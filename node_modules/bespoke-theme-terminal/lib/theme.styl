// Bespoke Classes: https://github.com/markdalgleish/bespoke-classes
// Stylus: http://learnboost.github.io/stylus

@import 'normalizecss/normalize.css'

spacing = 1vh
fontsize = 3vh
slide-padding = 4vh
progress-height = (spacing / 2)
width = 133vh - spacing - 2 * slide-padding
height = 100vh - progress-height - spacing - 2 * slide-padding

.bespoke-parent
  height: 100vh
  width: 100vw
  margin: 0 auto
  text-size-adjust: auto
  overflow: hidden
  font-size: fontsize
  position: relative

  background-color: #004883
  background-image:
    linear-gradient(90deg, rgba(255,255,255,.07) 50%, transparent 50%),
    linear-gradient(90deg, rgba(255,255,255,.13) 50%, transparent 50%),
    linear-gradient(90deg, transparent 50%, rgba(255,255,255,.17) 50%),
    linear-gradient(90deg, transparent 50%, rgba(255,255,255,.19) 50%)
  background-size: 17px, 73px, 83px, 211px

.bespoke-theme-terminal-content
  position: absolute
  width: 100%
  left 0
  right: 0
  bottom: 0
  margin: 0 auto
  text-align: center

.bespoke-scale-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  max-height: height
  display: inline-flex
  margin: (spacing/2)
  border-radius: (spacing/2);
  flex-direction: column
  justify-content: center
  text-align: left
  align-items: center
  transition: background-color 1s, max-height 1s, min-height 1s, min-width 1s
  background-color: rgba(255,255,255,0.9)

.bespoke-slide > *, .bespoke-slide li
  margin-top: 0.5 * fontsize
  margin-bottom: 0.5 * fontsize

.bespoke-slide ul
  margin: 0
  
.bespoke-slide.fullscreen, .bespoke-slide:first-child
  width: width
  height: height
  transition: min-width 1s, background-color 1s, min-height 1s

.bespoke-before.fullscreen, .bespoke-before:first-child
  height: auto
  width: auto

.bespoke-after
  max-height: 0px;
  margin: 0
  padding: 0
  overflow: hidden;
  pointer-events: none
  visibility: hidden
  position: absolute

.bespoke-before *, .bespoke-before li
  margin: 0
  font-size: inherit

.bespoke-before
  background: rgba(240, 240, 240, 0.8)
  font-size: 70%
  max-width: (width / 2)
  padding: (spacing/2)

.bespoke-active
  min-height: (height / 2)
  width: width
  min-width: width //for transition
  clear: both
  margin-left: auto
  margin-right: auto
  display: flex
  padding: slide-padding
  border-radius: 2*spacing

.bespoke-bullet
  transition: opacity 0.2s

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0
  transition: opacity 1s

.bespoke-backdrop-active
  opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: progress-height
  background-color: rgba(0,0,0,0.5)

.bespoke-progress-bar
  position: absolute
  height: 100%
  background-color: white
  transition: all 0.5s

.emphatic
  background: #222
